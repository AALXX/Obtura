FROM golang:1.25-alpine

WORKDIR /app

# Install necessary tools
RUN apk add --no-cache git

# Install Air for hot reload
RUN go install github.com/air-verse/air@latest

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 5090

# Run with Air for hot reload
CMD ["air", "-c", ".air.toml"]
